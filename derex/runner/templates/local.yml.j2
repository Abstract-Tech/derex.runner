# Open edX services
version: "3.5"
services:
  flower:
    image: {{ docker_image }}
    command:
      sh -c 'pip install flower;
        flower --port=5555
        --broker=$$(python -c "from django.conf import settings; print(settings.BROKER_URL)")'
    ports:
      - 127.0.0.1:5555:5555
    container_name: {{ project_name }}_flower

  lms:
    image: {{ docker_image }}
    command:
      sh -c 'gunicorn --name $${SERVICE_VARIANT}
        --bind=0.0.0.0:4700
        --max-requests=1000
        wsgi:application'
    volumes:
      - {{ project_name }}_data:/openedx/data/
    ports:
      - 127.0.0.1:4700:4700
    container_name: {{ project_name }}_lms
    networks:
      - derex

  cms:
    image: {{ docker_image }}
    command:
      sh -c 'gunicorn --name $${SERVICE_VARIANT}
        --bind=0.0.0.0:4800
        --max-requests=1000
        wsgi:application'
    volumes:
      - {{ project_name }}_data:/openedx/data/
    environment:
      SERVICE_VARIANT: cms
    ports:
      - 127.0.0.1:4800:4800
    container_name: {{ project_name }}_cms
    networks:
      - derex

  lms_worker:
    image: {{ docker_image }}
    command:
      sh -c './manage.py $${SERVICE_VARIANT}
        celery worker --loglevel=info
        --hostname=edx.$${SERVICE_VARIANT}.core.default
        --maxtasksperchild 100'
    container_name: {{ project_name }}_lms_worker
    volumes:
      - {{ project_name }}_data:/openedx/data/
    environment:
      C_FORCE_ROOT: "True"
    networks:
      - derex

  cms_worker:
    image: {{ docker_image }}
    command:
      sh -c './manage.py $${SERVICE_VARIANT}
        celery worker --loglevel=info
        --hostname=edx.$${SERVICE_VARIANT}.core.default
        --maxtasksperchild 100'
    container_name: {{ project_name }}_cms_worker
    volumes:
      - {{ project_name }}_data:/openedx/data/
    environment:
      C_FORCE_ROOT: "True"
      SERVICE_VARIANT: cms
    networks:
      - derex

networks:
  derex:
    name: derex

volumes:
  {{ project_name }}_data:
